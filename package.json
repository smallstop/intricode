{
  "name": "intricode",
  "displayName": "Intricode",
  "description": ":D",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "intricode",
          "title": "Intricode",
          "type" : "tree",
          "icon": "./image/icon.svg"
        }
      ]
    },
    "views": {
      "intricode": [
        {
          "id": "intricode",
          "name": "Intricode",
          "icon": "./image/icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "intricode.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "intricode.add",
        "title": "新增"
      },
      {
        "command": "intricode.delete",
        "title": "删除"
      },  
      {
        "command": "intricode.search",
        "title": "查詢"
      },
      {
        "command": "intricode.change",
        "title": "修改"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
